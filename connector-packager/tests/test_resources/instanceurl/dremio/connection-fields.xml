<connection-fields>
    <!-- Copyright (C) 2017-2019 Dremio Corporation. This file is confidential and private property. -->
    <field name="v-dremio-product" label="Product" category="authentication" value-type="selection" default-value="v-cloud">
        <selection-group>
            <option value="v-cloud" label="Dremio Cloud"/>
            <option value="v-software" label="Dremio Software"/>
        </selection-group>
    </field>
    <field name="authentication" label="Authentication" category="authentication" value-type="selection" default-value="auth-user-pass">
        <selection-group>
            <conditions>
                <condition field="v-dremio-product" value="v-cloud"/>
            </conditions>
            <option value="oauth" label="OAuth 2.0"/>
            <option value="auth-pass" label="Personal Access Token"/>
        </selection-group>
        <selection-group>
            <conditions>
                <condition field="v-dremio-product" value="v-software"/>
            </conditions>
            <option value="auth-user-pass" label="Username and Password"/>
        </selection-group>
    </field>
    <field name="v-project-id" label="Project" category="general" value-type="string" optional="true">
        <conditions>
          <condition field="v-dremio-product" value="v-cloud"/>
        </conditions>
    </field>
    <field name="server" label="Server" value-type="string" category="endpoint">
        <conditions>
          <condition field="v-dremio-product" value="v-software"/>
        </conditions>
    </field>
    <field name="port" label="Port" value-type="string" category="endpoint" default-value="31010" >
        <conditions>
          <condition field="v-dremio-product" value="v-software"/>
        </conditions>
    </field>
    <field name="username" label="Username" category="authentication" value-type="string">
        <conditions>
            <condition field="authentication" value="auth-user-pass"/>
        </conditions>
    </field>
    <field name="password" label="Password" category="authentication" value-type="string" secure="true">
        <conditions>
            <condition field="authentication" value="auth-user-pass"/>
            <condition field="authentication" value="auth-pass"/>
        </conditions>
    </field>
    <field name="instanceurl" label="Dremio Authorization Server" value-type="string" category="authentication" default-value="https://login.dremio.cloud">
        <conditions>
          <condition field="authentication" value="oauth" />
        </conditions>
        <validation-rule reg-exp="^(https)\:\/\/(login\.dremio\.cloud|login\.[a-z0-9]+\.dremio.site)" />
    </field>
    <field name="sslmode" label="Use SSL" value-type="boolean" category="general" default-value="require">
        <conditions>
          <condition field="v-dremio-product" value="v-software"/>
        </conditions>
        <boolean-options>
            <false-value value=""/>
            <true-value value="require"/>
        </boolean-options>
    </field>
    <field name="v-routing-queue" label="Queue" category="advanced" value-type="string" optional="true">
        <conditions>
          <condition field="v-dremio-product" value="v-software"/>
        </conditions>
    </field>
    <field name="v-engine" label="Engine" category="advanced" value-type="string" optional="true" />
    <field name="v-routing-tag" label="Tag" category="advanced" value-type="string" optional="true" />
  </connection-fields>
  